<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="OrangeHRMSuite" parallel="tests" thread-count="7">
    <listeners>
        <listener class-name="com.orangehrm.listeners.TestListeners"></listener>
    </listeners>
    <test name="OrangeHRMTest_chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.orangehrm.test.DummyClass"></class>
            <class name="com.orangehrm.test.DummyClass2"></class>
            <class name="com.orangehrm.test.LoginPageTest"></class>
            <class name="com.orangehrm.test.HomepageTest"></class>
<!--            <class name="com.orangehrm.test.DBVerificationTest"></class>-->
            <class name="com.orangehrm.test.APITest"></class>
        </classes>
    </test>
    <test name="OrangeHRMTest_edge">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.orangehrm.test.DummyClass"></class>
            <class name="com.orangehrm.test.DummyClass2"></class>
            <class name="com.orangehrm.test.LoginPageTest"></class>
            <class name="com.orangehrm.test.HomepageTest"></class>
            <!--            <class name="com.orangehrm.test.DBVerificationTest"></class>-->
            <class name="com.orangehrm.test.APITest"></class>
        </classes>
    </test>
    <test name="OrangeHRMTest_firefox">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="com.orangehrm.test.DummyClass"></class>
            <class name="com.orangehrm.test.DummyClass2"></class>
            <class name="com.orangehrm.test.LoginPageTest"></class>
            <class name="com.orangehrm.test.HomepageTest"></class>
            <!--            <class name="com.orangehrm.test.DBVerificationTest"></class>-->
            <class name="com.orangehrm.test.APITest"></class>
        </classes>
    </test>
</suite>